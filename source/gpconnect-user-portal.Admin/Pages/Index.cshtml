@page
@using gpconnect_user_portal.Helpers
@model IndexModel

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        @if (Model.UserIsAuthenticated)
        {   
            <partial name="EndpointChangesByStatus" />
            <partial name="ManageUsers" />
            <partial name="LookupsByType" />
        }
        else
        {
            if (Model.UserIsAuthenticatedButNotAuthorised)
            {
                <partial name="AuthenticatedButNotAuthorised" />
            }
            else
            {
                <partial name="NotAuthenticated" />
            }
        }
    </div>
</div>