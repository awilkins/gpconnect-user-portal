@page "{siteIdentifier?}"
@using gpconnect_user_portal.Helpers
@using gpconnect_user_portal.Helpers.Constants
@model OutstandingEndpointChangeDetailModel

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" href="~/Outstanding">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" height="24" width="24">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Back to Outstanding Endpoint Changes
            </a>
        </div>

    </div>
</div>

<form method="post" id="search-input-form">
    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-full">
            <table role="table" class="nhsuk-table">
                <tbody class="nhsuk-table__body">
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.SiteName)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            @Html.DisplayFor(x => x.SiteName)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    @if (Model.GetAttributeValue("NoOdsIssued").StringToBoolean())
                    {
                        <tr role="row" class="nhsuk-table__row">
                            <td role="cell" class="nhsuk-table__cell--bold">
                                @Html.DisplayNameFor(x => x.NoOdsIssued)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                @Html.Raw(Model.NoOdsIssued)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr role="row" class="nhsuk-table__row">
                            <td role="cell" class="nhsuk-table__cell--bold">
                                @Html.DisplayNameFor(x => x.OdsCode)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                @Html.DisplayFor(x => x.OdsCode)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                            </td>
                        </tr>
                    }
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.SitePostcode)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            @Html.DisplayFor(x => x.SitePostcode)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.SelectedCCGName)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            @Html.DisplayFor(x => x.SelectedCCGName)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.SubmitterContactName)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            @Html.DisplayFor(x => x.SubmitterContactName)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.SubmitterContactEmailAddress)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <a href='mailto:@Html.DisplayFor(x => x.SubmitterContactEmailAddress)'>@Html.DisplayFor(x => x.SubmitterContactEmailAddress)</a>
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.SubmitterContactTelephone)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <a href='tel:@Html.DisplayFor(x => x.SubmitterContactTelephone)'>@Html.DisplayFor(x => x.SubmitterContactTelephone)</a>
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.SelectedCareSetting)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            @Html.DisplayFor(x => x.SelectedCareSetting)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.SelectedSupplier)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            @Html.DisplayFor(x => x.SelectedSupplier)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    @if (Model.GetAttributeValue("IsHtmlEnabled").StringToBoolean())
                    {
                        <tr role="row" class="nhsuk-table__row">
                            <td role="cell" class="nhsuk-table__cell--bold">
                                @Html.DisplayNameFor(x => x.RecordAccessHtmlView)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                @Html.DisplayFor(x => x.RecordAccessHtmlView)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                            </td>
                        </tr>
                    }
                    @if (Model.GetAttributeValue("IsStructuredEnabled").StringToBoolean())
                    {
                        <tr role="row" class="nhsuk-table__row">
                            <td role="cell" class="nhsuk-table__cell--bold">
                                @Html.DisplayNameFor(x => x.RecordAccessStructured)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                @Html.DisplayFor(x => x.RecordAccessStructured)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                            </td>
                        </tr>
                    }@if (Model.GetAttributeValue("IsAppointmentEnabled").StringToBoolean())
                    {
                        <tr role="row" class="nhsuk-table__row">
                            <td role="cell" class="nhsuk-table__cell--bold">
                                @Html.DisplayNameFor(x => x.Appointments)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                @Html.DisplayFor(x => x.Appointments)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                            </td>
                        </tr>
                    }@if (Model.GetAttributeValue("IsSendDocumentEnabled").StringToBoolean())
                    {
                        <tr role="row" class="nhsuk-table__row">
                            <td role="cell" class="nhsuk-table__cell--bold">
                                @Html.DisplayNameFor(x => x.SendDocument)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                @Html.DisplayFor(x => x.SendDocument)
                            </td>
                            <td role="cell" class="nhsuk-table__cell">
                                <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                            </td>
                        </tr>
                    }
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.UseCaseDescription)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            @Html.DisplayFor(x => x.UseCaseDescription)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.DataSharingAgreementContactName)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            @Html.DisplayFor(x => x.DataSharingAgreementContactName)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.DataSharingAgreementContactEmailAddress)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <a href='mailto:@Html.DisplayFor(x => x.DataSharingAgreementContactEmailAddress)'>@Html.DisplayFor(x => x.DataSharingAgreementContactEmailAddress)</a>
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                    <tr role="row" class="nhsuk-table__row">
                        <td role="cell" class="nhsuk-table__cell--bold">
                            @Html.DisplayNameFor(x => x.DataSharingAgreementContactTelephone)
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <a href='tel:@Html.DisplayFor(x => x.DataSharingAgreementContactTelephone)'>@Html.DisplayFor(x => x.DataSharingAgreementContactTelephone)</a>
                        </td>
                        <td role="cell" class="nhsuk-table__cell">
                            <strong class="nhsuk-tag nhsuk-tag--red">&#9830;</strong>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


    <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-full">
            <button class="nhsuk-button nhsuk-button--secondary" asp-page-handler="Edit" asp-route-siteidentifier="@Model.SiteIdentifier" type="submit">@ButtonConstants.EDIT</button>
            <button class="nhsuk-button nhsuk-button--reverse" asp-page-handler="Reject" asp-route-siteidentifier="@Model.SiteIdentifier" type="submit">@ButtonConstants.REJECT</button>
            <button class="nhsuk-button" asp-page-handler="UpdateSpine" asp-route-siteidentifier="@Model.SiteIdentifier" type="submit">@ButtonConstants.UPDATESPINE</button>
        </div>
    </div>
</form>