                        </div>
                        <div class="nhsuk-grid-column-two-thirds">
                            <p>@Model.GetAttributeValue("SiteName")</p>
                        </div>
                    </div>
                    <div class="nhsuk-grid-column-one-half">
                        <div class="nhsuk-grid-column-two-thirds">
                            <p class="nhsuk-label--s">@Html.DisplayNameFor(model => model.RecordAccessHtmlView)</p>
                        </div>
                        <div class="nhsuk-grid-column-one-third">
                            <p>@Model.GetAttributeValue("RecordAccessHtmlView")</p>
                        </div>
                    </div>
                </div>
                <div class="nhsuk-grid-row">
                    <div class="nhsuk-grid-column-one-half">
                        <div class="nhsuk-grid-column-one-third">
