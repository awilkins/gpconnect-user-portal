                        </div>
                        <div class="nhsuk-grid-column-two-thirds">
                            <p>@Model.GetAttributeValue("FormOdsCode")</p>
                        </div>
                    </div>
                    <div class="nhsuk-grid-column-one-half">
                        <div class="nhsuk-grid-column-two-thirds">
                            <p class="nhsuk-label--s">@Html.DisplayNameFor(model => model.RecordAccessStructured)</p>
                        </div>
                        <div class="nhsuk-grid-column-one-third">
                            <p>@Model.GetAttributeValue("RecordAccessStructured")</p>
                        </div>
                    </div>
                </div>

                <div class="nhsuk-grid-row">
                    <div class="nhsuk-grid-column-one-half">
                        <div class="nhsuk-grid-column-one-half">
                            <p class="nhsuk-label--s">@Html.DisplayNameFor(model => model.SelectedCCGName)</p>
                        </div>
                        <div class="nhsuk-grid-column-one-half">
                            <p>@Model.GetAttributeValue("SelectedCCGName")</p>
                        </div>
                    </div>
                    <div class="nhsuk-grid-column-one-half">
                        <div class="nhsuk-grid-column-two-thirds">
                            <p class="nhsuk-label--s">@Html.DisplayNameFor(model => model.Appointment)</p>
