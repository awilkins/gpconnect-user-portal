                        <div class="nhsuk-grid-column-one-third">
                            <p>@Model.GetAttributeValue("Appointment")</p>
                        </div>
                    </div>
                </div>

                <div class="nhsuk-grid-row">
                    <div class="nhsuk-grid-column-one-half">
                        <div class="nhsuk-grid-column-one-half">
                            <p class="nhsuk-label--s">@Html.DisplayNameFor(model => model.SelectedCCGOdsCode)</p>
                        </div>
                        <div class="nhsuk-grid-column-one-half">
                            <p>@Model.GetAttributeValue("SelectedCCGOdsCode")</p>
                        </div>
                    </div>
                    <div class="nhsuk-grid-column-one-half">
                        <div class="nhsuk-grid-column-one-third">
                            <p class="nhsuk-label--s">@Html.DisplayNameFor(model => model.UseCase)</p>
