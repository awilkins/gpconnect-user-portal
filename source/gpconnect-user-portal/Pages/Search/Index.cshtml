@page
@using gpconnect_user_portal.Helpers.Constants
@model SearchModel

<form method="post" id="search-input-form">
    <h1>Live GP Connect Sites</h1>
    <div class="nhsuk-hint" id="input-hint-search">Click on '@ButtonConstants.ALLSITEDOWNLOAD' to export all sites to a spreadsheet.</div>
    <button class="nhsuk-button" asp-page-handler="ExportAll" type="submit">@ButtonConstants.ALLSITEDOWNLOAD</button>
    <h2>Search</h2>

    @if (Model.DisplaySearchInvalid && !Model.IsValidSearch)
    {
        <partial name="SearchInvalid" />
    }
    <partial name="SearchInput" />
    @if (Model.SearchResult != null && Model.IsValidSearch)
    {
        <h1>Results</h1>
        <partial name="SearchResultsHeader" />
        <partial name="SearchResults" />
    }
</form>
